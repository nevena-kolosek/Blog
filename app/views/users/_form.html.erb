    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= link_to 'Change password' %>
  </div>

  <div class="field">
    <%= form.label :bio %>
